---
type Props = {
  href: string;
  text: string;
};
const { href, text } = Astro.props;
---

<a
  class="text-2xl sm:text-xl md:text-2xl lg:text-3xl py-2 sm:px-2 w-full px-1 whitespace-nowrap sm:transition-all sm:hover:scale-110 text-orange-700 dark:text-orange-50 text-center hover:text-white hover:border-orange-700 dark:hover:border-orange-500 dark:hover:bg-orange-800 dark:hover:text-orange-100 hover:bg-orange-300 border-4 border-transparent"
  href={href}>{text}</a
>
