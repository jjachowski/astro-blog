---
type Props = {
  href: string;
  text: string;
};
const { href, text } = Astro.props;
---

<a
  class="text-2xl py-2 sm:transition-all sm:hover:scale-125 text-orange-700 dark:text-orange-50 text-center sm:px-4 hover:text-white hover:border-orange-700 dark:hover:border-orange-500 dark:hover:bg-orange-800 dark:hover:text-orange-100 hover:bg-orange-300 border-4 border-transparent"
  href={href}>{text}</a
>
