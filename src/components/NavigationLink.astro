---
type Props = {
  href: string;
  text: string;
};
const { href, text } = Astro.props;
const { pathname } = Astro.url;

const isActive = pathname === href;
const colorsActive = "text-orange-600 dark:text-orange-200";

const colorsInactive =
  "text-orange-800 dark:text-orange-50 dark:hover:text-orange-100";
---

<a
  class={`text-2xl sm:text-xl md:text-2xl lg:text-3xl py-2 sm:px-2 w-full px-1 whitespace-nowrap sm:transition-all sm:hover:scale-110  text-center hover:text-white hover:border-orange-700  dark:hover:text-orange-100 dark:hover:border-orange-500 dark:hover:bg-orange-800  hover:bg-orange-300 border-4 border-transparent ${
    isActive ? colorsActive : colorsInactive
  }`}
  href={href}>{text}</a
>
