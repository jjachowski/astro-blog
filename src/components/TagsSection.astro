---
import TagLink from './TagLink.astro';

type Props = {
	tags: {
		text: string;
		count: number;
	}[];
	withCount?: boolean;
};
const { tags, withCount = true } = Astro.props;
---

<div class="mt-4 grid grid-cols-2 gap-4 sm:flex sm:flex-row sm:flex-wrap">
	{
		tags.map((tag, i) => (
			<TagLink
				text={`#${tag.text.replaceAll(' ', '_')}${withCount ? ` (${tag.count})` : ''}`}
				url={`/tags/${tag.text}`}
				index={i}
			/>
		))
	}
</div>
