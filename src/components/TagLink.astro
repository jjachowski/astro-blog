---
type Props = {
    text?: string;
    url?: string;
};
const { text, url } = Astro.props;

const colors = [
    "border-indigo-800 from-indigo-50 to-indigo-200 text-indigo-900 dark:from-indigo-600 dark:to-indigo-400 dark:text-white dark:border-indigo-500",
    "border-pink-700 from-pink-50 to-pink-200 text-pink-900 dark:from-pink-600 dark:to-pink-400 dark:text-white dark:border-pink-500",
    "border-purple-700 from-purple-50 to-purple-200 text-purple-900 dark:from-purple-600 dark:to-purple-400 dark:text-white dark:border-purple-500",
    "border-orange-700 from-orange-50 to-orange-200 text-orange-900 dark:from-orange-600 dark:to-orange-400 dark:text-white dark:border-orange-500",
];
const i = Math.floor(Math.random() * colors.length);
---

{
    text && url && (
        <a
            style={`min-width: ${text.length * 11}px;`}
            class={`col-span-1 whitespace-nowrap border-2 bg-gradient-to-br px-4 py-2 text-center text-sm transition hover:scale-[1.02] ${colors[i]}`}
            href={url}
        >
            {text}
        </a>
    )
}
