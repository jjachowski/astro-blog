---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/base.css";
const pageTitle = "about me";

const identity = {
    firstName: "Jakub",
    country: "Poland",
    occupation: "Frontend dev",
    hobbies: ["bikes", "video and board games", "f1"],
};

const skills = ["HTML", "CSS", "JavaScript", "TypeScript", "React", "Astro"];
---

<BaseLayout
    pageTitle={pageTitle}
    metaDescription="this page is about author of this website"
>
    <p>Here are a few facts about me (pasting from docs, excuse the cringe):</p>
    <ul>
        <li>My name is {identity.firstName}.</li>
        <li>
            I live in {identity.country} and I work as a {identity.occupation}.
        </li>
        {
            identity.hobbies.length >= 2 && (
                <li>
                    My hobbies:{" "}
                    {identity.hobbies.map(
                        (x, i) =>
                            `${x}${i + 1 < identity.hobbies.length ? ", " : ""}`
                    )}
                </li>
            )
        }
    </ul>
    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
</BaseLayout>
