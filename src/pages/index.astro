---
import { Image } from "astro:assets";
import puzolini from "../assets/puzolini.jpeg";
import szczurson from "../assets/szczurson.jpeg";
import Greeting from "../components/Greeting";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout pageTitle="Home Page">
	<h2 class="">My awesome blog subtitle</h2>
	<h3>This is h3</h3>
	<Greeting client:idle messages={["Hi", "Hello", "Howdy", "Hey there"]} />
	<div
		class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 my-8"
	>
		<Image
			class="sm:w-1/2 border-4 border-pink-500 dark:border-pink-700"
			src={puzolini}
			quality="low"
			alt="my cat - pyza, sitting on a patch of grass looking beautiful as usual"
		/>
		<Image
			class="sm:w-1/2 border-4 border-amber-500 dark:border-amber-600"
			src={szczurson}
			quality="low"
			alt="my cat - chaÅ‚ka, giving herself a quick cleaning session while laying on hammock"
		/>
	</div>
</BaseLayout>
