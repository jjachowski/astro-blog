---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout
  pageTitle={frontmatter.title}
  metaDescription={frontmatter.description}
  withoutHeadTag
>
  <div
    class="text-sm bg-gray-100 dark:bg-gray-700 py-2 px-2 border-2 border-gray-300 text-gray-700 dark:border-gray-500 dark:text-gray-300 mb-8 max-w-prose mx-auto"
  >
    <h1 class="text-xl">title: {frontmatter.title}</h1>
    {
      frontmatter.pubDate && (
        <di>
          <p>
            published on:{" "}
            {new Date(frontmatter.pubDate).toLocaleDateString("pl-PL")}
          </p>
          <p>
            tags:{" "}
            {frontmatter.tags
              .map((x: string) => "#" + x.replaceAll(" ", "_"))
              .join(" ")}
          </p>
        </di>
      )
    }
    <p>written by: {frontmatter.author}</p>
  </div>

  <article
    class="prose dark:prose-invert prose-headings:font-medium prose-lg prose-em:text-indigo-500 prose-p:text-justify mx-auto"
  >
    <slot />
  </article>
</BaseLayout>
