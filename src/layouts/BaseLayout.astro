---
import "@fontsource-variable/jetbrains-mono";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import MetaDescription from "../components/MetaDescription.astro";
import "../styles/base.css";
type Props = {
    pageTitle?: string;
    metaDescription?: string;
    withoutHeadTag?: boolean;
};
const {
    pageTitle = "This is a page indeed",
    metaDescription,
    withoutHeadTag,
} = Astro.props;
---

<html lang="en" class="flex justify-center bg-pink-50 font-jetbrains">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <MetaDescription description={metaDescription} />
    </head>

    <body class="max-w-4xl p-2 sm:p-8">
        <Header />
        {
            !withoutHeadTag && (
                <h1 class="mb-8 text-5xl text-indigo-500">{pageTitle}</h1>
            )
        }
        <slot />
        <Footer />
    </body>
</html>
